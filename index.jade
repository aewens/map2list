doctype html
meta(charset="utf-8")
meta(author="Austin Ewens")
title Map
link(rel="stylesheet",href="css/bootstrap.min.css")
style.
    html, body {
        position: relative;
        top: 0;
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
    }
    #app {
        width: 100%;
        height: 100%;
        position: relative;
    }
    #map {
        width: 70%;
        height: 100%;
        float: left;
        line-height: 0;
    }
    #settings {
        width: 30%;
        height: 100%;
        border-left: 1px solid #000;
        padding-left: 5px;
        float: left;
    }
    .color-box {
        width: 32px;
        height: 34px;
        background: #fff;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    .popup {
        position: absolute;
        width: 250px;
        height: 34px;
        top: 50%;
        left: 50%;
        margin-top: -17px;
        margin-left: -125px;
    }
    .tile {
        display: inline-block;
        line-height: 0;
        background: #fff;
        border: 1px solid #000;
        cursor: pointer;
    }
    .tile:hover {
        border: 4px solid #000;
    }
body
    #app
        #map
            #placeholder
            //- canvas
            //-     | Your browser sucks, sorry
        aside#settings
            input#c.form-control(type="text", placeholder="Columns")
            input#r.form-control(type="text", placeholder="Rows")
            button#t.btn.btn-default(type="button")
                span.glyphicon.glyphicon-plus
                |  Types
            #types
            button#build.btn.btn-default(type="button") Build
            button#cmpl.btn.btn-default(type="button") Compile
        
    script(src="jquery.js")
    script(src="math.js")
    script(src="helper.js")
    script(src="maybe.js")
    script(src="settings.js")
    script(src="map.js")
